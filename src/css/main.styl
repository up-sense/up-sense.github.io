mainColor = #414141
firmColor = #00847B

html, body, h1, h2, h3, h4, h5, h6, p, span, div
  padding 0
  margin 0

  h1
    font-family SquareSansProMedium
    padding 15px 0px 10px 0px
    text-align center
    font-size 58px
    color mainColor
  h2
    font-family SquareSansProLight
    padding 15px 0px 10px 0px
    text-align center
    font-size 28px
    color mainColor

  p
    font-size 16px
    font-family SquareSansProRegular
    text-align center
    color #ccc


  img
    border none

  .global-wrapper
    margin auto
    display block
    position fixed
    top 0
    bottom 50px
    left 0
    right 0
    width 300px
    height 75px
    img
      width 100%
      opacity 1
