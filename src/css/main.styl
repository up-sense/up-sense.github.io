mainColor = #414141
firmColor = #00847B

html, body, h1, h2, h3, h4, h5, h6, p, span, div
  padding 0
  margin 0

  h1
    font-family SquareSansProMedium
    padding 15px 0px 10px 0px
    text-align center
    font-size 58px
    color mainColor
  h2
    font-family SquareSansProMedium
    padding 15px 0px 10px 0px
    text-align left
    font-size 22px
    font-weight normal
    color #666

  p
    font-size 16px
    font-family SquareSansProRegular
    text-align left
    color #666

  img
    max-width 300px
    border none

  .global-wrapper
    text-align center
    margin auto
    padding-top: 50px
    display block
    bottom auto
    left 0
    right 0
    max-width 600px
    min-height 75px
    padding-bottom: 50px

    .logo
      opacity 0
      width 100%
      -webkit-animation-name showLogo
      animation-name showLogo
      -webkit-animation-delay: 1s; /* Chrome, Safari, Opera */
      animation-delay: 1s;
      -webkit-animation-duration 1s
      animation-duration 1s
      -webkit-animation-fill-mode forwards
      animation-fill-mode forwards

  .copyright-line
    padding: 10px
    box-sizing border-box
    text-align: center
    width: 100%
    color: #666
    font-size: 14px
    font-family SquareSansProRegular

.social-block
  margin auto
  text-align center
  padding-top 80px
  .social-button
    width 56px
    padding 25px
    display inline-block
    opacity 0.7
    outline none
    box-shadow none
    border none
    &:hover
      opacity 0.85
    img
      border none
      width 100%

.email-bottom-contact
  text-align center
  padding 20px 10px
  font-size 16px
  font-family SquareSansProMedium
  color #666
  outline none
  box-shadow none
  border none

  a
    font-size 22px
    color #555
    font-family SquareSansProBold


