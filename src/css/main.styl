mainColor = #414141
firmColor = #00847B

html, body, h1, h2, h3, h4, h5, h6, p, span, div
  padding 0
  margin 0

  h1
    font-family SquareSansProMedium
    padding 15px 0px 10px 0px
    text-align center
    font-size 58px
    color mainColor
  h2
    font-family SquareSansProLight
    padding 15px 0px 10px 0px
    text-align center
    font-size 28px
    color mainColor

  p
    font-size 16px
    font-family SquareSansProRegular
    text-align center
    color #ccc


  img
    border none

  .global-wrapper
    margin auto
    display block
    position fixed
    top 0
    bottom 50px
    left 0
    right 0
    width 300px
    height 75px
    .logo
      width 100%
      -webkit-animation-name showLogo
      animation-name showLogo
      -webkit-animation-delay: 1s; /* Chrome, Safari, Opera */
      animation-delay: 1s;
      -webkit-animation-duration 1s
      animation-duration 1s
      -webkit-animation-fill-mode forwards
      animation-fill-mode forwards